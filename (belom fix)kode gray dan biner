#include <iostream>
#include <string.h>

using namespace std;

void kodeGray(char biner[]);
void kodeBiner(char gray[]);

int main()
{
    char biner[100];
    char gray[100];
    cout << "masukan nilai biner : ";
    cin >> biner;
    kodeGray(biner);
    
    cout << endl << "masukan nilai gray : ";
    cin >> gray;
    kodeBiner(gray);
    return 0;
}

void kodeGray(char biner[]){
    int len = strlen(biner);
    cout << "kode gray nya adalah : ";
    cout << biner[0];
    for (int i = 0; i <= len - 2; i++) {
        if(biner[i] == biner[i+1]){
            biner[i] = '0';
            cout << biner[i];
            
        } else {
            biner[i] = '1';
            cout << biner[i];
        }
    }
    
}

void kodeBiner(char gray[]){
    int len = strlen(gray);
    char penampung[100];
    char penampung1[100];
    penampung[0] = gray[0];
    penampung1[0] = gray[1];
    cout << "kode biner nya adalah : ";
    cout << penampung[0];
    for (int i = 0; i <= len - 2; i++) {
        if(penampung1[i] == penampung[i]){
            penampung[i] = '0';
            cout << penampung[i];
        } else {
            penampung[i] = '1';
            cout << penampung[i];
        }
    }
}




